@model Patient_Transport_Migration.Models.VM.PatientInfo.AanvraagDetailsVM

@if (Model.Aanvraag != null) {
    using (Html.BeginForm("PatientInfo", "Home", FormMethod.Post)) {
        @Html.HiddenFor(m => m.AanvraagId, new { id = "AanvraagId", Value = @Model.Aanvraag.Id })
        @Html.HiddenFor(m => Model.PatientVisitId, new { id = "PatientVisitId", Value = @Model.Aanvraag.Patient.PatientVisit })

        <dl class="dl-horizontal">
            <dt>@Html.LabelFor(m => m.Aanvraag.AanvraagType.Omschrijving)</dt>
            <dd>@Html.ValueFor(m => m.Aanvraag.AanvraagType.Omschrijving)</dd>

            <dt>@Html.LabelFor(m => m.Aanvraag.AanvraagDoor)</dt>
            <dd>@Html.ValueFor(m => m.Aanvraag.AanvraagDoor)</dd>

            <dt>@Html.LabelFor(m => m.Aanvraag.Patient.Naam)</dt>
            <dd>@Html.ValueFor(m => m.Aanvraag.Patient.Naam)</dd>
        </dl>

        if (Model.Aanvraag.AanvraagType.Include_avr_Transportwijze) {
            <div class="form-group">
                @Html.LabelFor(m => m.SelectedTransportwijze)
                <div>
                    @Html.DropDownListFor(m => m.SelectedTransportwijze, new SelectList(Model.TransportwijzeLijst, "Value", "Text", Model.Aanvraag.avr_TransportwijzeId))
                </div>
            </div>
        }

        if (Model.Aanvraag.AanvraagType.Include_va_Omschrijving) {
            <div class="form-group">
                @Html.LabelFor(m => m.va_Omschrijving)
                <div>
                    @Html.EditorFor(m => m.va_Omschrijving)
                </div>
            </div>
        }

        <input type="submit" value="Opslaan" class="btn btn-default" />
    }
} else {
    <p>Problemen bij het laden van de aanvraag.</p>
}

<script>
    $(new function() {
        $("#dvAanvraagDetails").show();
    })
</script>