@model Patient_Transport_Migration.Models.VM.DokterStatusVM

@if (Model.DokterDetailsVM.Dokter != null) {
    @Html.HiddenFor(model => model.DokterDetailsVM.Dokter.Id)
    @Html.HiddenFor(model => model.DokterDetailsVM.Dokter.Naam)
    @Html.HiddenFor(model => model.DokterDetailsVM.Dokter.IsConsultDokter)

    <div class="form-group">
        @Html.LabelFor(model => model.DokterDetailsVM.Dokter.IsConsultVerwachtend, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            <div class="checkbox">
                @Html.EditorFor(model => model.DokterDetailsVM.Dokter.IsConsultVerwachtend)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" value="Opslaan" class="btn btn-default" />
        </div>
    </div>

}