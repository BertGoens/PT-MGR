@model Patient_Transport_Migration.Models.VM.DispatchOverzicht.WachtendeTransportTakenVM

<table class="table table-bordered table-hover table-responsive table-striped">
    <caption><big><span class="glyphicon glyphicon-refresh glyphicon-clickable"></span>Taken</big></caption>
    <tr>
        <th>Datum Gemaakt</th>
        <th>Van</th>
        <th>Naar</th>
        <th>Notities</th>
        <th><span class="glyphicon glyphicon-warning-sign"></span></th>
        <th>Toewijzen aan</th>
        <th>Actie</th>
    </tr>
    @if (Model.TransportTaken != null) {
        foreach (var ttaak in Model.TransportTaken) {
            <tr class="@(ttaak.IsPrioriteitHoog ? "HogePrioriteit" : "")">
                <td>@ttaak.DatumGemaakt</td>
                <td>@ttaak.LocatieStart</td>
                <td>@ttaak.LocatieEind</td>
                <td><input type="text" value="@(ttaak.TransportNotities)" /></td>
                <td><input type="checkbox" value="true" @(ttaak.IsPrioriteitHoog ? "checked=\"checked\"" : "") /></td>
                <td>@Html.DropDownList("Werknemers", new SelectList(@Model.TransportWerknemerItems, "Value", "Text"), "")</td>
                <td><span class="glyphicon glyphicon-ok-sign glyphicon-clickable" onclick="saveTaak(@ttaak.AanvraagId)"></span></td>
            </tr>
        }
    }
</table>

<ul class="pagination">
    @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++) {
        <li class="@(page == Model.Pager.CurrentPage ? "active" : "")">
            <a href="#" onclick="loadTakenPage(@page)">@page</a>
        </li>
    }
</ul>