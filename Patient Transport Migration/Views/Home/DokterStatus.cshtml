@model Patient_Transport_Migration.Models.VM.DokterStatusVM

@{
    ViewBag.Title = "Dokter Status";
}


<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

<h2>Dokter Status</h2>
<hr />
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div style="padding-left:1em">
            <label for="ddlDokters">Selecteer een dokter om zijn status te veranderen</label>
            <div>
                @Html.DropDownListFor(model => model.DokterLijstSelected, Model.DokterLijst, "Dokters",
               new { @onchange = "loadEditDokter(this.value)", @id = "ddlDokters" })
            </div>


            <div>
                <!--Container-->
                <div id="dvEditDokterStatus">
                    @{Html.RenderPartial("_EditDokter", Model); }
                </div>
            </div>
        </div>
    </div>
                    }

<script>
    function loadEditDokter(docId) {
        $("#dvEditDokterStatus").load('GetDokterDetails?docterId=' + docId);
    }
</script>