<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Css/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Images/favicon.ico" rel="icon" type="image/x-icon" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home/">Patient Transport</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-default">
                    <li><a class="active" href=""><i>@ViewBag.Title</i></a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                                        
                    <li><a href="/Home/MaakVervoerAanvraag">Maak Vervoer Aanvraag</a></li>
                    
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Patient Info <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-header">Patient Info</li>
                            <li><a href="/Home/PatientInfo">Patiënt Info</a></li>
                            <li><a href="/Home/DokterPraktijk">Dokter Praktijk</a></li>
                            <li><a href="/Home/VerplegingOverzicht">Verpleging Overzicht</a></li>
                            <li class="divider"></li>
                            <li class="dropdown-header">Transport</li>
                            <li><a href="/Home/DispatchOverzicht">Dispatch Overzicht</a></li>
                            <li><a href="/Home/TransportMedewerker">Transport Medewerker Taken</a></li>
                        </ul>
                    </li>
                    <li><a href="/Account/Logout">Afmelden</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>
    
    <div class="container body-content">
        @if (ViewBag.ErrorMessage != null) {
            <div class="alert alert-danger" style="display:inline-block">
                @ViewBag.ErrorMessage
            </div>
        }

        @RenderBody()
        
        <footer id="footer">
            <hr />
            <div class="container">
                <p>&copy; Bert Goens - Patient Transport - @DateTime.Now.Year</p>
            </div>          
        </footer>
    </div>
</body>
</html>